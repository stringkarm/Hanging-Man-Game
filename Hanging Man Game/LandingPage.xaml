<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hanging_Man_Game.LandingPage"
             Title="LandingPage"
             BackgroundColor="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Source="mainpage.png"
               Aspect="AspectFill"
               Grid.RowSpan="2" />

        <Button x:Name="Start"
                Text="START GAME"
                Clicked="Start_Clicked"
                Grid.Row="1"
                HorizontalOptions="Center"
                VerticalOptions="End"
                BackgroundColor="#3498DB"  
                TextColor="White"
                FontSize="Large"
                FontAttributes="Bold"
                WidthRequest="250"
                HeightRequest="70"
                CornerRadius="35"
                Margin="0,0,0,50" />

    </Grid>
</ContentPage>